
<div class="card mb-5">
    <div class="card-content">
        <div class="media">
            <div class="media-left">
                <figure class="image is-48x48">
                    <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                </figure>
            </div>
            <div class="media-content">
                <p class="title is-4">{{#if name}}
                    {{ name }}
                  {{/if}}  </p>    
            </div>
        </div>

        <div class="content">
           {{#if message}}
                    {{ message }}
                  {{/if}}  

            <sub> {{#if time}}
                    {{{time }}}
                  {{/if}}</sub>
        </div>
    </div>
</div>

