<main>
                <div class="comments-section mx-5">
                    <h1 class="title has-text-centered">Leave us a comment</h1>
                <form action="/createComment" method="POST">
                        <div class="field">
                            <label class="label">Name</label>
                            <div class="control">
                                <input class="input" type="text" placeholder="Name" name="name">
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Message</label>
                            <div class="control">
                                <textarea class="textarea" placeholder="Leave us a comment" name="message"></textarea>
                            </div>
                        </div>
                        <div class="control mb-5">
                            <button class="button">Submit</button>
                        </div>
                    </form>

                {{#each userComment}}
                    {{> comment}}
                {{/each}}
            </div>
        </main>