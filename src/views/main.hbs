<main>
                <div class="comments-section mx-5 my-5">
                    <h1 class="title has-text-centered is-size-1">Comments feed</h1>
                    <div class="my-5">
                    <form action="/createComment" method="POST">
                            <div class="field text-is-centered">
                                <label class="label ">Name</label>
                                <div class="control">
                                    <input class="input is-dark" type="text" placeholder="Name" name="name" required>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label"></label>
                                <div class="control">
                                    <textarea class="textarea is-dark" placeholder="Leave a comment" name="message" required></textarea>
                                </div>
                            </div>
                            <div class="control mb-5 has-text-centered">
                                <button class="button drop-shadows">Comment</button>
                            </div>
                        </form>
                    </div>
                   
                {{#each userComment}}
                    {{> comment}}
                {{/each}}
            </div>
                    <form action="/deleteComments?_method=DELETE" method="POST">
                         <div class="control mb-5 has-text-centered">
                                <button class="button drop-shadows">Delete All Comments</button>
                            </div>
                    </form>

        </main>